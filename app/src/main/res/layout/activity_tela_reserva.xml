<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserva de Mesa"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/campoDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data da Reserva"
        android:focusable="false"
        android:clickable="true"/>

    <EditText
        android:id="@+id/campoQuantidadePessoas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantidade de Pessoas"
        android:inputType="number"/>

    <EditText
        android:id="@+id/campoHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="HorÃ¡rio da Reserva (ex: 19:00)"
        android:layout_marginTop="16dp"/>


    <Button
        android:id="@+id/botaoReservar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reservar"
        android:layout_marginTop="24dp"/>

</LinearLayout>